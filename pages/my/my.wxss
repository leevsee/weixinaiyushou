.userinfo {
  padding: 2% 3% 6% 3%;
  justify-content: flex-start;
  background-color: #fff;
  background-image: url("http://7xz8pr.com1.z1.glb.clouddn.com/me.jpg");
}

.userinfo-img {
  margin-left: 3%;
  border-radius: 100rpx;
  width: 100rpx;
  height: 100rpx;
}

.userinfo-content {
  margin-top: 8%;
  margin-left: 4%;
  margin-bottom: 2%;
  justify-content: space-around;
  align-items: flex-start;
  height: 150rpx;
}

.userinfo-name {
  font-weight: bold;
}

.userinfo-vip {
  font-size: 28rpx;
  color: #333;
}

.userinfo-progress {
  height: 14rpx;
  width: 100%;
  background: #22a1f2;
  border-radius: 10rpx;
}

.userinfo-orange {
  width: 60%;
  background: #ffa557;
  float: left;
  height: 14rpx;
  text-align: right;
  border-radius: 10rpx;
}

.userinfo-bill {
  padding: 2% 3% 2% 3%;
  justify-content: space-around;
  background-color: #fff;
  font-size: 30rpx;
  color: #333333;
}

.vertical-divide {
  height: 70rpx;
  background-color: #f1f1f1;
  width: 1px;
}

.userinfo-expenditure {
  margin-left: 8%;
}

.userinfo-income {
  margin-right: 8%;
}

.userinfo-expenditure-name {
  margin-bottom: 7%;
  font-size: 35rpx;
}

.userinfo-expenditure-name {
  margin-bottom: 7%;
  font-size: 35rpx;
}

