.myOrders {
  padding: 3%;
  justify-content: space-between;
  align-items: flex-start;
  background-color: #fff;
}

.myOrders-name {
  padding-bottom: 3%;
  font-size: 35rpx;
  color: #333333;
}

.myOrders-wrap {
  width: 100%;
  justify-content: space-between;
  padding-top: 3%;
}

.myOrders-item {
  justify-content: space-around;
}

.myOrders-text {
  font-size: 30rpx;
  color: #777777;
}

.myOrders-img {
  padding-top: 13%;
  width: 46rpx;
  height: 46rpx;
}

.myOrders-color {
  color: #1392e3;
  font-size: 34rpx;
}

.myOrders-sale {
  width: 100%;
  font-size: 28rpx;
}

.myOrders-sale-text {
  width: 92%;
}

.myOrders-sale-item {
  justify-content: space-between;
  margin-top: 3%;
  margin-bottom: 3%;
}

.myOrders-del {
  color: red;
}

.mySaleOrder {
  padding-bottom: 0%;
}
