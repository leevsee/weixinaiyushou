@import "../../common/animation.wxss";
@import "../../common/common.wxss";

page {
  background-color: #f1f1f1;
  font-size: 34rpx;
}

.order-item {
  padding: 3% 3% 1% 3%;
  margin-bottom: 2%;
  align-items: flex-start;
  background-color: #fff;
}

.order-item-title {
  justify-content: space-between;
  margin-bottom: 2%;
  width: 97%;
}

.order-item-status {
  color: #1392e3;
  font-size: 30rpx;
}

.order-item-detail {
  justify-content: space-between;
  margin-top: 2%;
  margin-bottom: 2%;
  width: 100%;
}

.order-item-detail-img {
  width: 300rpx;
  height: 160rpx;
}

.order-item-detail-name {
  justify-content: flex-start;
  width: 55%;
  margin-left: 1%;
}

.order-item-price {
  width: 100%;
  margin-top: 2%;
  margin-bottom: 2%;
  text-align: right;
}

.order-item-but {
  width: 100%;
  margin-top: 2%;
  text-align: right;
}

.station-button {
  /*color: red;*/
  background-color: #1392e3;
}

.postage-button-hover {
  background-color: #38b0fd;
}

button::after {
  border: 0px;
}
