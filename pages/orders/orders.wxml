
<!-- item -->
<view class="columnView order-item" wx:for="{{ordersList}}">

  <!-- 订单名 -->
  <view class="rowView order-item-title">
    <view class="order-item-name">
      <text>{{item.CommName}}</text>
    </view>
    <view class="order-item-status">
      <text>待付款</text>
    </view>
  </view>

  <!-- 分割线 -->
  <view class="thin-divide"></view>

  <!-- 订单详情 -->
  <view class="rowView order-item-detail">
    <image src="/res/niurou.jpg" class="order-item-detail-img"></image>
    <view class="order-item-detail-name">
      <text style="">{{item.CommName}}</text>
    </view>
  </view>

  <!-- 分割线 -->
  <view class="thin-divide"></view>

  <!-- 订单合计 -->
  <view class="order-item-price">
    <text>共{{item.CommCount}}件商品 需付款：￥{{item.AMoney}}</text>
  </view>

  <!-- 分割线 -->
  <view class="thin-divide"></view>
  <view class="order-item-but">
    <button size="mini" hover-class="postage-button-hover" class="station-button" style="font-size:24rpx;color:#fff;padding:0 4%;" bindtap="goToPay" data-index="{{index}}">去付款</button>
  </view>
</view>
