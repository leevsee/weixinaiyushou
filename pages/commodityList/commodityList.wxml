<block wx:if="{{! showLoading}}">
<!-- 头部信息 -->
<view class="rowView commodity-head">
  <image src="/res/location.png" style="width: 100rpx; height: 100rpx;"></image>
  <view class="commodity-head-text">
    <view class="commodity-head-textcontent1">
      <text>土鸡选品标准：</text>
    </view>
    <view class="divide commodity-head-divide"></view>
    <view class="commodity-head-textcontent2">
      <text>散养180天以上，喂养玉米、谷物</text>
    </view>
  </view>
</view>

<scroll-view class="scroll-view_y" style="{{setHeight}}" scroll-y="true" bindscrolltolower="scrollTest">

  <!-- item -->
  <block wx:for="{{commodityList}}">
    <view class="commodity-wrap">

      <!-- 分割线 -->
      <view class="divide"></view>

      <!-- 商品标题 -->
      <view class="commodity-name">{{item.CommName}}</view>

      <!-- 商品图片 -->
      <view class="commodity-pic">
        <image src="http://img06.tooopen.com/images/20160818/tooopen_sy_175833047715.jpg" mode="scaleToFill" style="width: 100%; height: 100%;"></image>
      </view>

      <!-- 商品图片轮播 -->

      <!--<swiper indicator-dots="true" autoplay="true" interval="5000" duration="500" class="swiperView">
      <block wx:for="{{imgUrls}}">
        <swiper-item class="swiperPic">
          <image src="{{item}}" mode="aspectFit" bindtap="swiperPicOnClick" data-url="{{item}}" id="{{index}}" />
        </swiper-item>
      </block>
    </swiper>-->

      <!-- 商品图片视频信息 -->
      <view class="rowView commodity-detail">
        <view class="columnView commodity-detail-width topPadding" data-CommCode="{{item.CommCode}}" bindtap="goToPic">
          <image src="/res/commodity_pic.png" style="width: 45rpx; height: 45rpx;"></image>
          <view class="commodity-detail-text">
            <text>图片</text>
          </view>
        </view>
        <view class="columnView commodity-detail-width topPadding" data-CommCode="{{item.CommCode}}" bindtap="goToVideo">
          <image src="/res/commodity_vedio.png" style="width: 45rpx; height: 45rpx;"></image>
          <view class="commodity-detail-text">
            <text>视频</text>
          </view>
        </view>
        <view class="columnView commodity-detail-width">
          <view class="commodity-detail-discount">￥{{item.SalePrice}}</view>
          <view class="commodity-detail-price">￥{{item.MarketPrice}}</view>
        </view>
        <view class="columnView commodity-detail-width commodity-detail-buy" bindtap="goToPurchase" data-commcode="{{item.CommCode}}">
          <view class="commodity-detail-buy-text">
            <text>立刻购买</text>
          </view>

          <!--<button type="warn" size="mini" bindtap="gotoBuyPage"> 立刻购买 </button>-->
        </view>
      </view>

      <!-- 分割线 -->
      <view class="divide"></view>

      <!-- 商品选说明 -->
      <view class="commodity-introduce">
        <view class="commodity-introduce-head">
          <text>商品说明</text>
        </view>
        <view class="divide commodity-introduce-divide"></view>
        <view class="commodity-introduce-text">
          <text>{{item.Explain}}</text>
        </view>
        <view class="commodity-introduce-text">
          <text>预售截止日期：{{item.SaleDeadlineDate}}</text>
        </view>
        <view class="commodity-introducer">——选品专员隔壁{{item.Author}}</view>
      </view>

      <!-- 分割线 -->
      <view class="divide"></view>

      <!-- 商品转让信息 -->
      <view class="commodity-introduce" wx:if="{{item.List_Temp_Commoditys.length}}">
        <view class="commodity-introduce-head">
          <text>转让信息</text>
        </view>
        <view class="divide commodity-introduce-divide"></view>
        <scroll-view class="scroll-view_H" scroll-x="true" bindscrolltolower="scrollTest">
          <view class="scroll-view-warp">
