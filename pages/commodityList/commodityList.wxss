@import "../../coommon/animation.wxss";
@import "../../coommon/coommon.wxss";

.commodity-head {
  margin-top: 1%;
  margin-bottom: 1%;
  margin-left: 3%;
}

.commodity-head-text {
  display: flex;
  flex-direction: column;
  margin-left: 2%;
  width: 83%;
}

.commodity-head-textcontent1 {
  color: #1392e3;
  font-size: 34rpx;
}

.commodity-head-textcontent2 {
  margin-top: 1%;
  font-size: 32rpx;
}

.commodity-head-divide {
  height: 1rpx;
  background-color: #1392e3;
}

.commodity-name {
  padding-top: 2%;
  font-size: 36rpx;
}

.commodity-detail {
  justify-content: space-around;
  margin-top: 2%;
}

.commodity-detail-width {
  width: 25%;
  padding-bottom: 1%;
}

.commodity-detail-text {
  padding-top: 5%;
  font-size: 28rpx;
}

.commodity-detail-discount {
  padding-top: 5%;
  font-size: 30rpx;
  font-weight: bold;
  color: #1392e3;
}

.commodity-detail-price {
  padding-top: 5%;
  font-size: 30rpx;
  /*font-weight: bold;*/
  text-decoration: line-through;
  color: #666;
}

.commodity-detail-buy {
  padding-bottom: 0;
}

.commodity-detail-buy-text {
  line-height: 105rpx;
  text-align: center;
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  background-color: #1392e3;
}

.commodity-introduce {
  margin: 3%;
  /*border: 2rpx solid #000;*/
}

.commodity-introduce-head {
  color: #1392e3;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 1%;
}

.commodity-introduce-divide {
  /*position: absolute;*/
  height: 1rpx;
  background-color: #1392e3;
  margin-bottom: 2%;
}

.commodity-introduce-text {
  font-size: 36rpx;
}

.commodity-introducer {
  display: flex;
  justify-content: flex-end;
  margin-top: 1%;
  font-size: 36rpx;
  /*float:right;*/
}

.scroll-view-warp {
  display: inline-block;
  width: 100%;
}

.scroll-view_H {
  white-space: nowrap;
  height: 200rpx;
}

.commodity-transfer {
  display: flex;
  /*display: inline-block;*/
  justify-content: space-around;
  /*border: 2rpx solid #000;*/
  align-items: center;
  margin-bottom: 2%;
  /*flex-direction: column;*/
}

.commodity-transfer-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  /*align-items: space-around;*//*align-items: center;*/
  width: 82%;
}

.commodity-transfer-Avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}

.commodity-transfer-price {
  margin-bottom: 1%;
  font-size: 36rpx;
  color: #1392e3;
}

.commodity-transfer-text {
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
