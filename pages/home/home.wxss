.headViewCtrl {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 1%;
  margin-bottom: 3%;
}

.swiperView{
    height: 500rpx;
}

.swiperPic {
  text-align: center;
}

.categoryCtrl {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 3%;
  margin-bottom: 3%;
}

.categoryBrandView {
  width: 50%;
  text-align: center;
  /*flex: 1;*/
}

.divide {
  width: 100%;
  height: 6rpx;
  background-color: coral;
  margin-bottom: 3%;
}

.headline {
  display: flex;
  height: 100rpx;
  font-size: 22rpx;
  margin-top: 2%;
  margin-bottom: 2%;
}

.headline-image {
  margin-left: 2%;
  margin-right: 2%;
}

.headline-content {
  width: 100%;
  height: 100rpx;
  /*border: 1px solid #9cc5ef;*/
  overflow: hidden;
}

.headline-slider {
  width: 100%;
  height: 100%;
  text-align: center;
  color: #fff;
  margin-left: 0;
  animation: slide1 20s ease-out infinite;
}

.headline-slider-text {
  /*float: left;*/
  color: red;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: baseline;
}

@keyframes slide1 {
  0% {
    margin-top: 0;
  }

  23% {
    margin-top: 0;
  }

  33% {
    margin-top: -100rpx;
  }

  56% {
    margin-top: -100rpx;
  }

  66% {
    margin-top: -200rpx;
  }

  90% {
    margin-top: -200rpx;
  }

  100% {
    margin-top: 0;
  }
}

.categoryView {
  font-size: 30rpx;
  width: 15%;
  text-align: center;
  /*flex: 1;*/
}
