<view class="addrSelcView">
  <image src="/resources/add.png" style="width: 100rpx; height: 100rpx;"></image>
  <view class="addrSelc-content">
    <view class="addrSelc-content-text">新增收货地址</view>
    <image src="/resources/goto.png" style="width: 60rpx; height: 60rpx;"></image>
  </view>
</view>
<view class="addrView">
  <view class="addr-title">收货地址：</view>
  <view class="addr-display">厢竹打到33好公安小区2号铺</view>
</view>
<radio-group class="onSale-radio-group" bindchange="radioChange">
  <label class="onSale-delivery">
    <radio value="放入提货站待售" checked="ture" />放入提货站待售
    <view class="onSale-delivery-price">建议售价：￥158</view>
  </label>
  <label class="onSale-resale">
    <radio value="放入提货站待售" checked="" />发货前允许转售
    <view class="onSale-resale-price">建议售价：￥158</view>
  </label>
</radio-group>
<view class="onSale-price">
  <view class="onSale-postage">
    <view class="onSale-postage-text">送货/提货费</view>
    <view class="onSale-postage-price">￥10</view>
  </view>
  <view class="onSale-name">
    <view class="onSale-name-text">【邕宁特色馆】散养土鸡</view>
    <view class="onSale-name-price">￥118</view>
  </view>
  <view class="onSale-num">
    <view class="onSale-num-buy">
      <view class="onSale-num-text">购买数量：</view>
      <image src="/resources/minusnum.png" style="width: 40rpx; height: 40rpx;"></image>
      <image src="/resources/minusnum.png" style="width: 40rpx; height: 40rpx;" wx:if="{{condition}}"></image>
      <view class="onSale-num-price">2</view>
      <image src="/resources/addnum.png" style="width: 40rpx; height: 40rpx;"></image>
    </view>
    <view class="onSale-num-resale">
      <view class="onSale-num-text">转售：</view>
      <image src="/resources/minusnum.png" style="width: 40rpx; height: 40rpx;"></image>
      <view class="onSale-num-price">2</view>
      <image src="/resources/addnum.png" style="width: 40rpx; height: 40rpx;"></image>
    </view>
  </view>
</view>
<view class="divide"></view>
<view class="total">
  <view class="total-text">合计</view>
  <view class="total-price">￥128</view>
</view>
<view class="message">
  <view class="message-text">买家留言:</view>
  <textarea class="message-input" auto-height placeholder="点击给商家留言" />
</view>
<view class="onSale-submit">
  <view class="onSale-submit-text">合计:￥128</view>
  <view class="onSale-submit-button">
    <button type="warn" size="mini" bindtap="gotoBuyPage"> 提交订单 </button>
  </view>
</view>