.columnView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.rowView {
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiperView {
  height: 500rpx;
  background: #fff;
}

.swiperPic {
  text-align: center;
}

.divide {
  width: 100%;
  height: 20rpx;
  background-color: #f1f1f1;
}

.thin-divide {
  width: 100%;
  height: 1rpx;
  background-color: #f1f1f1;
}

.text-overflow{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nopadding-right{
  padding-right: inherit;
}

.loading-tip {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ccc;
  font-size: 28rpx;
}
